{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true
  },
  "include": [
    "src",
    "cypress",
    "__mocks__",
    "cypress.config.ts",
    "jest.setup.ts",
    "jest.config.js",
    "vite.config.ts",
    "commitlint.config.js"
  ],
  "exclude": ["node_modules", "**/dist"]
}
